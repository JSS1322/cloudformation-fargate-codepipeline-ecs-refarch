{
    "family": "%TASK_FAMILY_NAME%",
    "containerDefinitions": [
        {
            "name": "%TASK_CONTAINER_NAME%",
            "environment": [
                {
                    "name": "PORT",
                    "value": "4444"
                },
                {
                    "name": "DATABASE_URL",
                    "value": "%DATABASE_URL%"
                },
                {
                    "name": "RAILS_ENV",
                    "value": "production"
                },
                {
                    "name": "RAILS_SERVE_STATIC_FILES",
                    "value": "true"
                },
                {
                    "name": "RAILS_LOG_TO_STDOUT",
                    "value": "true"
                },
                {
                    "name": "SECRET_KEY_BASE",
                    "value": "72971829c1b11f427d6539a5340eff94f61e5ab19c38ed01a08d0290280189fb83f4fd07735fd8e69c1eed6de2fdab789dbbad6afbe4225de02cb6895aff8bba"
                }
            ],
            "command": ["rails db:migrate && rails assets:precompile && rails server -b 0.0.0.0"],
            "essential": true,
            "image": "%IMAGE_TAG%",
            "portMappings": [
                {
                    "containerPort": 4444
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "%AWSLOGS_GROUP%",
                    "awslogs-region": "%AWSLOGS_REGION%",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}
