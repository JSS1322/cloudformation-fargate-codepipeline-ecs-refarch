{
    "family": "%TASK_FAMILY_NAME%",
    "containerDefinitions": [
        {
            "name": "%TASK_CONTAINER_NAME%",
            "environment": [
                {
                    "name": "PORT",
                    "value": "4444"
                },
                {
                    "name": "DATABASE_URL",
                    "value": "%DATABASE_URL%"
                },
                {
                    "name": "RACK_ENV",
                    "value": "production"
                },
                {
                    "name": "RAILS_ENV",
                    "value": "production"
                }
            ],
            "command": %COMMAND_JSON_ARRAY%,
            "essential": true,
            "image": "%IMAGE_TAG%",
            "portMappings": [
                {
                    "containerPort": 4444
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "%AWSLOGS_GROUP%",
                    "awslogs-region": "%AWSLOGS_REGION%",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}
