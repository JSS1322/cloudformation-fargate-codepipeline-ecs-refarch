{
    "family": "web-service",
    "containerDefinitions": [
        {
            "name": "web-service",
            "environment": [
                {
                    "name": "PORT",
                    "value": "4444"
                }
            ],
            "essential": true,
            "image": "%IMAGE_TAG%",
            "portMappings": [
                {
                    "containerPort": 4444
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "%STACK_NAME%",
                    "awslogs-region": "%AWSLOGS_REGION%",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}
